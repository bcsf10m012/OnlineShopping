@model Project.Models.ShopingCart

<div class="span3"></div>
<div class="span6">
    <h2>Shopping Cart</h2>
    <div class="bs-example">
    <table class="table table-striped">
        <thead>
            <tr> <th>Product</th> 
                <th> Quantity</th> 
                <th>Price</th> 
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Title</td>
                <td>@Model.Quantity</td>
                <td>@Model.Price</td>    
            </tr>
        </tbody>
    </table>
    <table><tr><td>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <button type="submit" class="btn btn-primary" > ContinueShoping </button>
    }
    </td><td> 
    @using (Html.BeginForm("ShopingDetail", "ShopingCart", FormMethod.Post))
    {
        <button type="submit" class="btn btn-primary" > Check Out </button>
    }
    </td></tr></table>
    </div>
</div>