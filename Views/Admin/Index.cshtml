@{
    Layout = null;
    Layout = "~/Views/Shared/NavBar.cshtml";
}
<div class="container" style="padding-top: 100px;padding-bottom: 40px">

    <div class="form-signin" style="max-width: 300px;padding: 19px 29px 29px;margin: 0 auto 20px;
    background-color: #f5f5f5;border: 1px solid #e5e5e5;-webkit-border-radius: 5px;-moz-border-radius: 5px;
    border-radius: 5px;-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    box-shadow: 0 1px 2px rgba(0,0,0,.05)">
        
    <h2 class="form-signin-heading" style="margin-bottom: 10px"> Please sign in </h2>
       
    @using (Html.BeginForm("LoginAdmin", "Admin", FormMethod.Post))
    {
        <input type="text" class="input-block-level" placeholder="Admin name" id="n" name="name" style="font-size: 16px;
        height: auto;margin-bottom: 15px;padding: 7px 9px">
        
        <input type="password" class="input-block-level" placeholder="Password" id="p" name="passwd" style="font-size: 16px;
        height: auto;margin-bottom: 15px;padding: 7px 9px">
        
        <button class="btn btn-large btn-primary" type="submit" onclick="return check_fields(this)">Sign in</button>
                
       <br/><br/>
       <div id="error" style="color:red"> </div>
    }
    </div>
</div>

<script>
    function check_fields()
    {
        var u_name = document.getElementById('n').value;
        var u_passwd = document.getElementById('p').value;
        var err = document.getElementById('error');

        if (u_name.length < 1 || u_passwd.length < 1)
        {
            err.innerText = "* Fields can not be empty";
            return false;
        }
        else
        {
            return true;
        }
    }
</script>